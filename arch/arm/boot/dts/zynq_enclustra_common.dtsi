&gem0 {
	status = "okay";
	phy-handle = <&phy0>;
	phy-mode = "rgmii-id";
	/delete-property/ local-mac-address;

	phy0: ethernet-phy@3 {
	    reg = <3>;

	    txc-skew-ps = <1800>;
	    txen-skew-ps = <420>;

	    txd0-skew-ps = <420>;
	    txd1-skew-ps = <420>;
	    txd2-skew-ps = <420>;
	    txd3-skew-ps = <420>;

	    rxc-skew-ps = <900>;
	    rxdv-skew-ps = <420>;

	    rxd0-skew-ps = <420>;
	    rxd1-skew-ps = <420>;
	    rxd2-skew-ps = <420>;
	    rxd3-skew-ps = <420>;
	};

};

&i2c0 {
	status = "okay";
	clock-frequency = <100000>;

	atsha204a@64 {
		status = "okay";
		compatible = "atmel,atsha204a", "atmel,atsha204-i2c";
		reg = <0x64>;
	};
};

&qspi {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	is-dual = <0>;
	num-cs = <1>;
	flash0: flash@0 {
		reg = <0x0>;
		compatible = "spansion,s25fl512s", "jedec,spi-nor";
		spi-rx-bus-width = <0x4>;
		spi-tx-bus-width = <0x4>;
		spi-max-frequency = <50000000>;
		#address-cells = <1>;
		#size-cells = <1>;
	};
};

&uart0 {
	u-boot,dm-pre-reloc;
	status = "okay";
	cts-override ;
	device_type = "serial";
	port-number = <0>;
};

&clkc {
	fclk-enable = <0x3>;
	ps-clk-frequency = <33333333>;
};
